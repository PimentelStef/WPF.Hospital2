<Window x:Class="WPF.Hospital.DeleteMedicine"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="DeleteMedicine" Height="450" Width="800">
    <Grid Margin="20">
        <StackPanel>

            <TextBlock Text="Delete Medicine"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Medicine ID"/>
            <TextBox x:Name="txtMedicineId"
                     Height="30"
                     Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Cancel"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>

                <Button Content="Delete"
                        Width="80"
                        Background="DarkRed"
                        Foreground="White"
                        Click="Delete_Click"/>
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
