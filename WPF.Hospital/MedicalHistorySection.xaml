<Window x:Class="WPF.Hospital.MedicalHistorySection"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF.Hospital"
        mc:Ignorable="d"
        Title="MedicalHistorySection" Height="450" Width="800">
    <Grid>
        <GroupBox Header="Medical History"
          FontWeight="Bold"
          Padding="10"
          Margin="10">

            <Grid Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="120"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <TextBlock Text="Doctor:"
                   VerticalAlignment="Center"/>

                <ComboBox Grid.Column="1"
                  x:Name="cmbDoctors"
                  Height="30"
                  Margin="5"
                  DisplayMemberPath="FullName"/>

                <TextBlock Grid.Row="1"
                   Text="Procedure:"
                   VerticalAlignment="Top"/>

                <TextBox Grid.Row="1"
                 Grid.Column="1"
                 x:Name="txtProcedure"
                 Height="60"
                 AcceptsReturn="True"
                 TextWrapping="Wrap"
                 Margin="5"/>

                <Button Grid.Row="2"
                Grid.ColumnSpan="2"
                Content="Add Medical History"
                Height="35"
                Margin="5"
                Background="#3498DB"
                Foreground="White"
                FontWeight="Bold"
                Click="btnAddHistory_Click"/>
            </Grid>
        </GroupBox>
    </Grid>
</Window>
