<Window x:Class="WPF.Hospital.DeletePrescription"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Prescription"
        Height="230"
        Width="380"
        WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <StackPanel>
            <TextBlock Text="Delete Prescription"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="DarkRed"
                       Margin="0,0,0,15"/>

            <TextBlock Text="Prescription ID"/>
            <TextBox x:Name="txtPrescriptionId"
                     Height="30"
                     Margin="0,5,0,15"/>

            <StackPanel Orientation="Horizontal"
                        HorizontalAlignment="Right">

                <Button Content="Cancel"
                        Width="80"
                        Margin="0,0,10,0"
                        Click="Cancel_Click"/>

                <Button Content="Delete"
                        Width="80"
                        Background="DarkRed"
                        Foreground="White"
                        Click="Delete_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>