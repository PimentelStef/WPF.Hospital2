<Window x:Class="WPF.Hospital.DeletePatient"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Delete Patient"
        Height="250"
        Width="400"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#F5F7FA">

    <Grid Margin="20">
        <Border CornerRadius="10"
                Background="White"
                Padding="20"
                BorderBrush="#E0E0E0"
                BorderThickness="1" Margin="-21,-21,-20,-19">

            <StackPanel>

                <!-- Title -->
                <TextBlock Text="Delete Patient Record"
                           FontSize="20"
                           FontWeight="Bold"
                           Foreground="#C62828"
                           Margin="0,0,0,10"/>

                <!-- Warning -->
                <TextBlock Text="⚠ Please enter the Patient ID to confirm deletion."
                           Foreground="Gray"
                           TextWrapping="Wrap"
                           Margin="0,0,0,15"/>

                <!-- Patient ID -->
                <StackPanel Margin="0,0,0,15">
                    <TextBlock Text="Patient ID"
                               FontWeight="SemiBold"/>
                    <TextBox x:Name="txtPatientId"
                             Height="30"
                             Padding="5"
                             Margin="0,5,0,0"/>
                </StackPanel>

                <!-- Buttons -->
                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Right">

                    <Button Content="Cancel"
                            Width="80"
                            Height="30"
                            Margin="0,0,10,0"
                            Click="Cancel_Click"/>

                    <Button Content="Delete"
                            Width="80"
                            Height="30"
                            Background="#C62828"
                            Foreground="White"
                            Click="Delete_Click"/>
                </StackPanel>

            </StackPanel>
        </Border>
    </Grid>
</Window>